<div class="container-fluid">
	<div class="goods-list__items-wrapper">
		<% data.forEach((cat, index) => { %>
			<div class="goods-list__item">
				<div class="goods-item__title">
					<% if(user.adminMode) { %>
						<div class="mb-1">
							<button class="btn js-goodsCategories-delete" data-id="<%= cat.id -%>">Удалить категорию</button>
						</div>
						<input class="js-goodsCategories-upd input-text" data-target="title" data-id="<%= cat.id -%>" type="text" value="<%= cat.title %>">
					<% } else { %>
						<span><%= cat.title %></span>
					<% } %>
				</div>
				<div class="goods-item__img">
					<a href="<%= cat.alias || fragment.settings.categoriesRootUrl + '/' + cat.id -%>">
						<img src="<%= Helpers.replaceImageIfNotExist(cat.img) %>" alt="Категория">
					</a>
					<% if(user.adminMode) { %>
						<label>
							<span style="cursor: pointer">Добавить фото <b>+</b></span>
							<input class="js-goodsCategories-addPhoto" data-target="img" data-id="<%= cat.id -%>" type="file" style="display: none;">
						</label>
					<% } %>
				</div>
				<div class="goods-item__price">
					<a href="<%= cat.alias || fragment.settings.categoriesRootUrl + '/' + cat.id -%>" class="btn">Перейти</a>
				</div>
			</div>
		<% }) %>
	</div>
</div>